{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",

  "extends": "fastify-tsconfig",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "outDir": "dist",
    "declaration": false,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  },
  "include": ["src/**/*.ts"],
  "exclude": [".eslintrc.js", "dist"]
}
